{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true
    },
    "json.schemas": [
    {
        "fileMatch": [
            "/*.pbiviz.json"
        ],
        "schema": {
            "type": "object",
            "properties": {
                "apiVersion" : {
                    "type": "string",
                    "description": "Version of the IVisual API"
                },
                "author":{
                    "type": "object",
                    "properties": {
                        "name":{
                            "type": "string"
                        },
                        "email":{
                            "type": "string" 
                        }
                    }
                },
                "description":{
                    "type":"string",
                    "description": "What does this visual do?" 
                },
                "displayName":{
                    "type": "string",
                    "description": "A friendly name"
                },
                "externals" : {
                    "type": "array",
                    "description": "External Javascript files that you would like to include"
                },
                "guid" : {
                    "type": "string",
                    "description": "Unique identifier for the visual"
                },
                "visualClassName" : {
                    "type": "string",
                    "description": "Class of your IVisual"
                },
                "icon":{
                    "type": "string",
                    "description": "Path to icon image" 
                },
                "version":{
                    "type": "string",
                    "description": "version of this visual"
                }
            }
        }
    }]
}